class Solution {
public:
    int numberOfCuts(int n) {
        int c;
        if(n==1)
        {
            return 0;
        }
        else{
            if(n%2==0)
            {
                c = n/2; 
            }
            else
            {
                c = n;
            }
        }
        return c;
    }
};
